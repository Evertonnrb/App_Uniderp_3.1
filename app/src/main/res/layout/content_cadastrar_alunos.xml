<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.nrbsistemas.uniderp_31.CadastrarAlunos"
    tools:showIn="@layout/activity_cadastrar_alunos">

    <TextView
        android:layout_margin="30dp"
        android:textColor="#000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro de alunos"/>

    <EditText
        android:id="@+id/edt_nome_aluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:inputType="textPersonName"/>
    <EditText
        android:id="@+id/edt_ra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ra"
        android:inputType="number"/>

    <EditText
        android:id="@+id/edt_senha_aluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:inputType="text"/>
    <EditText
        android:id="@+id/edt_curso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Curso"
        android:inputType="text"/>
    <Button
        android:id="@+id/btn_cad_aluno"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:layout_gravity="center"
        android:gravity="center"/>
</LinearLayout>
